@using SeniorCapstoneProject.ViewModels
@model StudentVM
<h1 class="welcome2 headings">Add new student:</h1>


<hr />
<div class="headings">
<div class=" row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherId" class="control-label">Teacher</label>
               <select asp-for=TeacherId class="form-control" asp-items="@Model.TeacherList" ></select>
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentPhoto" class="control-label">Upload Photo</label>
                <input asp-for="StudentPhoto" class="form-control" />
                <span asp-validation-for="StudentPhoto" class="text-danger"></span>
            </div>  
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
<div class="headings">
    <a asp-action="Index">Back to List</a>
</div>
