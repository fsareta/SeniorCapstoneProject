@using SeniorCapstoneProject.ViewModels
@model GameVM
<h1 class="welcome2 headings">Detailed Report for: @Model.Student.FirstName @Model.Student.LastName:</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Question
            </th>
            <th>
                Student's Answer
            </th>
            <th>
                Correct/Incorrect
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.StudentAnswers) {
        <tr>
            <td>
                @item.QnAId
            </td>
            <td>
                @item.StuAnswer
            </td>
            <td>
               <a asp-controller="Student"  asp-action="StudAnswers" asp-route-id="@item.Id">View</a>
            </td>
            <td>
              
                
            </td>
        </tr>
}
    </tbody>
</table>
         <div class="headings" >     </div>  
