     <div class="row">
   <form asp-action="Details" enctype="multipart/form-data">
           <table class=" table">
	<tr>
<th> Question </th>
<th> Answer </th>
	</tr>

	@foreach (var item in Model.Questions)
   
	{	 <tr>
