            </div>
               <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherPhoto" class="control-label">Upload Photo</label>
                <input asp-for="TeacherPhoto" class="form-control" />
                <span asp-validation-for="TeacherPhoto" class="text-danger"></span>
            </div>  
